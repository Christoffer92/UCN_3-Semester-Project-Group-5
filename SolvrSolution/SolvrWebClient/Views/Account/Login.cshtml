@model SolvrWebClient.Models.LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<h2>Log in</h2>

@*Alt CSS stammer fra bootstrap*@
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @*ReturnURL er noget fra den forrige login metode*@
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @*Ved ikke om antiforgerytoken skal være her*@
                @Html.AntiForgeryToken()
                <h4>Use a registered account to log in.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @*Her er tekst boksen for at skrive sit email*@
                <div class="form-group">
                    @Html.LabelFor(m => m.Username, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                @*Her er tekst boksen for at skrive sin kode*@
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                @*Her er knappen til at logge ind med*@
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-default" />
                    </div>
                </div>
                @*Hvis man ikke har en oprettet bruger kan man klikke på den her. Går direkte til action name "Register"*@
                <p>
                    @Html.ActionLink("Register as a new user", "Register")
                </p>
            }
        </section>
    </div>
</div>
