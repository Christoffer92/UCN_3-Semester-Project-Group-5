@model SolvrWebClient.Models.PhysicalPostViewModel

<h2>Edit Physical Post</h2>

<div class="createPost-Box-ViewPost-Standard">
    @using (Html.BeginForm("UpdatePhysical", "CreatePost", FormMethod.Post))
    {
        <div>
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <b>Locking:</b><br />
            @Html.CheckBoxFor(m => m.IsLocked)
            <p>Check this box to lock the post, preventing any more users from applying.</p>
            <b>Titel:</b><br />
            @* TODO: Insert Titel logic *@
            @ViewBag.Title
            @Html.TextBoxFor(m => m.Title)
            <br />
            <b>Category:</b><br />
            @* TODO: Insert Category logic *@
            @Html.DropDownListFor(m => m.CategoryId, (IEnumerable<SelectListItem>)ViewBag.DropDownList, (string)ViewBag.CategoryName)
        </div>
        <div>
            <b>Description:</b><br />
            @* TODO: Insert Description logic *@
            @Html.TextAreaFor(m => m.Description, 10, 0, new { @class = "standard-TextArea-Size" })
        </div>
        <div>
            <b>Alternativ Description:</b><br />
            @Html.TextAreaFor(m => m.AltDescription, 10, 0, new { @class = "standard-TextArea-Size" })
        </div>
        <div>
            <b>Zipcode:</b><br />
            @Html.TextBoxFor(m => m.Zipcode)
            <br />
        </div>
        <div>
            <b>Address:</b><br />
            @Html.TextBoxFor(m => m.Address)
            <br />
        </div>
        <div>
            <b>Tags:</b><br />
            @Html.TextBoxFor(m => m.TagsString)
        </div><br />
        <div class="createPost-BtnFloat">
            @Html.HiddenFor(m => m.postId)
            <input type="submit" name="Edit Physical Post" value="Save changes" class="standard-Btn-Colour standard-Btn-border btn" />
        </div><br />
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}