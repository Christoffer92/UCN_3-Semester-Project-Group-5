@model SolvrWebClient.Models.PostViewModel

@{
    ViewBag.Title = "Create a post";
}
<h2>@ViewBag.Title</h2>

@* TODO: CSS classes for layout *@

<input type="button" class="standard-Btn-Colour btn createPostPage-SwitchBtn-Location" name="CreatePhysical" value="Create Physical post" onclick="location.href='@Url.Action("CreatePhysical", "CreatePost")'"/>

@using (Html.BeginForm("Create", "CreatePost", FormMethod.Post))
{
    <div>
        <b>Titel:</b> <br />
        @Html.TextBoxFor(m => m.Title)<br />
        <b>Category:</b> <br />
        @Html.DropDownListFor(m => m.CategoryId, (IEnumerable<SelectListItem>)ViewBag.DropDownList, "Select Category")
    </div>
    <div>
        <b>Description:</b> <br />
        @Html.TextAreaFor(m => m.Description, 10, 100, new { @class = "createPostPage-TextArea-Size" })
    </div>
    <div>
        <b>Tags:</b> <br />
        @Html.TextAreaFor(m => m.TagsString, 1, 100, new { @class = "createPostPage-TextArea-Size" })
    </div>
    <br />
    <input type="submit" name="Create" value="Create" class="createPostPage-CreateBtn-Location standard-Btn-Colour btn" />

    
}
